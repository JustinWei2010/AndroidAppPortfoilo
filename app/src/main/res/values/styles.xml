<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="PortfolioButton" parent="android:style/Widget.Button">
        <item name="android:layout_width">@dimen/activity_body_width</item>
        <item name="android:layout_height">@dimen/activity_body_length</item>
        <item name="android:background">@color/colorButton</item>
        <item name="android:onClick">displayToast</item>
    </style>

</resources>
